# Maintainer: Yusuke Sasaki <y_sasaki@nuem.nagoya-u.ac.jp>

_realname=rust-bin
pkgbase="mingw-w64-${_realname}"
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.7.0
pkgrel=1
pkgdesc="A safe, concurrent, practical language (official build)"
arch=('any')
url="https://github.com/rust-lang/rust"
license=('MIT, Apache2.0')
makedepends=()
depends=()
source=("http://static.rust-lang.org/dist/rust-${pkgver}-${CARCH}-pc-windows-gnu.tar.gz")
md5sums=(SKIP)

package() {
  cd "$srcdir"/rust-${pkgver}-${CARCH}-pc-windows-gnu
  ./install.sh --prefix=${pkgdir}${MINGW_PREFIX} --verbose
  rm ${pkgdir}${MINGW_PREFIX}/bin/libgcc*.dll
  rm ${pkgdir}${MINGW_PREFIX}/bin/libstdc++*.dll
}

# vim: set ft=sh ts=2 sw=2 et :
