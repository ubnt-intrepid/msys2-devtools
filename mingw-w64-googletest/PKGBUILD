# Maintainer: Yusuke Sasaki <y_sasaki@nuem.nagoya-u.ac.jp>

_realname=googletest
pkgbase="mingw-w64-${_realname}"
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.7.0
pkgrel=1
pkgdesc="Google Test"
arch=('any')
url="https://github.com/google/googletest"
license=('BSD 3-clauses')
makedepends=()
depends=()
source=(
  "https://github.com/google/googletest/archive/release-${pkgver}.tar.gz"
)
md5sums=(SKIP)

build() {
  cd googletest-release-$pkgver

  rm -rf build
  mkdir build
  cd build

  cmake -G "Unix Makefiles" -DBUILD_SHARED_LIBS=ON -DCMAKE_SKIP_RPATH=ON ..
  make
}

package() {
  cd googletest-release-$pkgver

  mkdir -pm 0755 "$pkgdir"/${MINGW_PREFIX}/{lib,include/gtest/internal,share/licenses/$pkgname,src/gtest/src,src/gtest/cmake}
  install -m 0644 build/libgtest{,_main}.dll{,.a} "$pkgdir"/${MINGW_PREFIX}/lib
  install -m 0644 include/gtest/*.h "$pkgdir"/${MINGW_PREFIX}/include/gtest
  install -m 0644 include/gtest/internal/*.h "$pkgdir"/${MINGW_PREFIX}/include/gtest/internal/
  install -m 0644 LICENSE "$pkgdir"/${MINGW_PREFIX}/share/licenses/$pkgname/
  # install -m 0644 "$srcdir/$pkgname-$pkgver/fused-src/gtest"/* "$pkgdir"/usr/src/gtest/src/
  # install -m 0644 "$srcdir/$pkgname-$pkgver/CMakeLists.txt" "$pkgdir"/usr/src/gtest/
  # install -m 0644 "$srcdir/$pkgname-$pkgver/cmake"/* "$pkgdir"/usr/src/gtest/cmake/
}

# vim: set ft=sh ts=2 sw=2 et :
