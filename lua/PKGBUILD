pkgname=lua
pkgver=5.3.3
pkgrel=1
arch=('i686' 'x86_64')
license=('MIT')
url="http://www.lua.org"
source=(http://www.lua.org/ftp/${pkgname}-${pkgver}.tar.gz)
sha256sums=(SKIP)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make posix -j1
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make INSTALL_TOP="${pkgdir}/usr" install -j1
}
