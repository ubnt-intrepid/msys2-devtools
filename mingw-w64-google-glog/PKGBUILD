# Maintainer: Yusuke Sasaki <y_sasaki@nuem.nagoya-u.ac.jp>

_realname=google-glog
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=0.3.4
pkgrel=1
pkgdesc="Logging library for C++ (mingw-w64)"
arch=('any')
url="https://github.com/google/glog"
license=('custom:BSD3')
depends=("${MINGW_PACKAGE_PREFIX}-gcc-libs")
makedepends=("make"
             "${MINGW_PACKAGE_PREFIX}-gcc")
source=("https://github.com/google/glog/archive/v${pkgver}.tar.gz")
sha256sums=('ce99d58dce74458f7656a68935d7a0c048fa7b4626566a71b7f4e545920ceb10')

build() {
  cd "${srcdir}/glog-${pkgver}"

  ./configure --prefix=${MINGW_PREFIX}
  make
}

package() {
  cd "${srcdir}/glog-${pkgver}"

  make DESTDIR="$pkgdir" install

  install -Dm644 COPYING "${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}/COPYING"
}

# vim: set ft=sh ts=2 sw=2 et :
